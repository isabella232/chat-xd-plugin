{
	"compilerOptions": {
		"outDir": "./dist/",
		"strict": true,
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": false,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"jsx": "react"
	},
	"include": ["src/**/*", "cypress/support/*"]
}
